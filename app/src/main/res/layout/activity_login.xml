<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".Activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_lg"
            android:layout_marginStart="280dp"
            android:layout_marginLeft="280dp"
            android:layout_marginRight="67dp"
            android:padding="8dp"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.8"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="150dp">

            <TextView
                android:id="@+id/txt_phoneno"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayout"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/phoneno_id"
                android:layout_width="200dp"
                android:layout_height="@dimen/btnstyle_height"
                android:layout_marginTop="@dimen/margin_md"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:background="@drawable/dr_appointment_btn_style"
                style="@style/EditText" />

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:theme="@style/MyTextInputLayout"
                android:layout_marginTop="@dimen/margin_lg"
                android:text="Password" />

            <EditText
                android:id="@+id/password_id"
                android:layout_width="200dp"
                android:layout_height="@dimen/btnstyle_height"
                android:layout_marginTop="@dimen/margin_md"
                android:textAlignment="center"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:background="@drawable/dr_appointment_btn_style"
                style="@style/EditText" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_xl"
                android:text="@string/lable_login"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/margin_lg"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_forgetpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyTextInputLayout"
            android:layout_gravity="center"
            android:text="Forget Password" />

    </LinearLayout>


</FrameLayout>
