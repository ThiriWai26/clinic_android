<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relativeimg">

            <TextView
                android:id="@+id/textname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="Doctor Name"
                android:textStyle="bold"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/img_doctor"
                android:layout_marginStart="100dp"
                android:layout_toRightOf="@+id/textname"
                tools:ignore="RtlCompat" />


            <TextView
                android:id="@+id/texthospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textname"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Hospital Name"
                android:layout_marginTop="8dp"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/texthospital"
                android:justificationMode="inter_word"
                android:text="Date"
                android:lineSpacingMultiplier="1.25"
                android:textColor="#312d2d"
                android:textSize="15sp" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/about"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="40dp"
                android:background="#C7C4C4" />

            <RelativeLayout
                android:id="@+id/cardbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                tools:ignore="RtlCompat">

                <Button
                    android:id="@+id/btnbook"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:background="#FFFFFF"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="36dp"
                    android:paddingTop="10dp"
                    android:text="Cancel"
                    android:textColor="#000000" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_below="@id/view"
                android:orientation="horizontal"
                android:src="@drawable/line3"
                android:layout_toRightOf="@+id/cardbutton" />


            <RelativeLayout
                android:id="@+id/cardbutton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/line"
                tools:ignore="RtlCompat">

                <Button
                    android:id="@+id/btnfav"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:background="#FFFFFF"
                    android:drawableRight="@drawable/save"
                    android:paddingBottom="14dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="36dp"
                    android:paddingTop="10dp"
                    android:text="Map"
                    android:textColor="#000000" />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
