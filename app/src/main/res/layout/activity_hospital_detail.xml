<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_doctor"/>

            <ImageView
                android:id="@+id/imgSpecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_book"
                android:layout_alignParentRight="true"
                android:padding="16dp"/>

            <include
                android:id="@+id/card_view"
                layout="@layout/layout_hospital_detail" />

<HorizontalScrollView
    android:id="@+id/horizontalScroll"
    android:layout_below="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbarSize="0dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_doctor" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_doctor"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_doctor"/>

    </LinearLayout>
</HorizontalScrollView>

            <TextView
                android:id="@+id/seeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/horizontalScroll"
                android:layout_margin="16dp"
                android:text="See All"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seeAll"
                android:layout_gravity="center_horizontal"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:scrollbars="vertical"
                tools:listitem="@layout/layout_doctor_list" />

    </RelativeLayout>


</ScrollView>