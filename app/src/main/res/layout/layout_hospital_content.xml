<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.HospitalActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#ffffff"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/appBarLayout"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#FFFFFF"
            android:elevation="1dp"
            app:contentInsetEnd="5dp"
            app:contentInsetLeft="5dp"
            app:contentInsetRight="5dp"
            app:contentInsetStart="5dp"
            app:contentInsetStartWithNavigation="2dp"
            app:titleTextColor="#000000"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleMarginStart="0dp">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txthospital"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Hospital"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/txthospital"
                    android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/imgsetting"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/txthospital"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            android:src="@drawable/setting"
                            android:foregroundGravity="center"
                            tools:ignore="NotSibling,RtlCompat" />

                        <android.support.v7.widget.SearchView
                            android:id="@+id/sv"
                            style="@style/SearchViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/imgsetting"
                            android:layout_gravity="center"
                            android:background="#FFFFFF"
                            android:gravity="center"
                            app:queryHint="Search Doctor" >

                        </android.support.v7.widget.SearchView>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBarLayout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cardadv"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="0dp">

                <include
                    android:id="@+id/card_view"
                    layout="@layout/layout_advertise" />

            </RelativeLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hospital "
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20sp"
                android:textSize="20sp"
                android:background="#fff"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_below="@id/address"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:scrollbars="vertical"
                tools:listitem="@layout/building_item"
                android:background="#FFFFFF"
                tools:ignore="NotSibling" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    

</RelativeLayout>