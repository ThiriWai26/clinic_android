<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textcategories"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:text="Health Service"
        android:layout_marginTop="14dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textcategories"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">

            <android.support.v7.widget.CardView
                android:id="@+id/cardexam"
                android:layout_width="160dp"
                android:layout_height="110dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="4dp"
                android:elevation="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#71E975">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_doctor"
                        android:alpha="0.3"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="0dp">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:layout_marginLeft="65dp"
                                android:src="@drawable/blood1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Blood Donation"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="12dp"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardregi"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_toRightOf="@+id/cardexam"
                app:cardCornerRadius="10dp"
                android:layout_margin="4dp"
                android:elevation="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4D9FF7">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_doctor"
                        android:alpha="0.3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:layout_marginLeft="65dp"
                            android:src="@drawable/registration"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pharmacy"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardassess"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_below="@id/cardexam"
                app:cardCornerRadius="10dp"
                android:layout_margin="4dp"
                android:elevation="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F3A32A">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_doctor"
                        android:alpha="0.3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:layout_marginLeft="65dp"
                            android:src="@drawable/assessment1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NGO"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/carddrag"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_below="@id/cardregi"
                android:layout_toRightOf="@+id/cardassess"
                app:cardCornerRadius="10dp"
                android:layout_margin="4dp"
                android:elevation="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8738D">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_doctor"
                        android:alpha="0.3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="0dp">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:layout_marginLeft="65dp"
                            android:src="@drawable/emergencyimg"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="18dp"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

</RelativeLayout>
