<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">

        <RelativeLayout
            android:id="@+id/featuredphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:src ="@drawable/ic_back_arrow" />

            <ImageView
                android:id="@+id/imgfav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="270dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/imgback"
                android:src="@drawable/favouritewhite"
                android:clickable="true"
                tools:ignore="RtlCompat" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@+id/imageView"
                android:layout_gravity="center"
                android:layout_margin="22dp"
                android:maxHeight="48dp"
                android:tag="image_tag"
                android:src="@drawable/img_doctor" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="4dp"
                android:text="  Name"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tvTown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile"
                android:layout_marginLeft="12dp"
                android:text="Town"
                android:textSize="14dp"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/imageView"
                android:layout_toRightOf="@id/tvName"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/ic_phone_black_24dp"
                android:scaleType="fitXY"
                tools:ignore="NotSibling" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/profile"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="#F7F5F5" />

            <ImageView
                android:id="@+id/diamond"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/view"
                android:src="@drawable/addressimg"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:text=" Address"
                android:layout_toRightOf="@id/diamond"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLocation"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text=" Mandalay"
                android:textSize="14sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/textLocation"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:background="#F7F5F5" />

            <ImageView
                android:id="@+id/diamond1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/view1"
                android:src="@drawable/aboutimag4"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"/>


            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_toRightOf="@+id/diamond1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="12dp"
                android:text=" About"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/txtabout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="14sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/txtabout"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:background="#F7F5F5" />

            <ImageView
                android:id="@+id/diamond2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/view2"
                android:src="@drawable/clock1"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_toRightOf="@id/diamond2"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:text=" Specialists"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/txtspecialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/specialist"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="60dp"
                android:text=" Heart,OG"
                android:textColor="#000000"
                android:textSize="12dp"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#3586FD"
            android:text="Book An Appointment"
            android:textColor="#FFFFFF"
            tools:ignore="NotSibling" />

    </RelativeLayout>
</RelativeLayout>


