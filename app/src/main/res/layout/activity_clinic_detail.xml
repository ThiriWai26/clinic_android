<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp">

        <RelativeLayout
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgfeaturedphoto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/imgback"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingLeft="16dp"
                android:src ="@drawable/ic_keyboard_backspace_black_24dp"
                android:onClick="onbackClick"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imgfav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_lg"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:clickable="true"
                android:onClick="onFavouriteClick"
                tools:ignore="RtlCompat,VectorDrawableCompat" />

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgfeaturedphoto"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_lg"
                    android:maxHeight="48dp"
                    android:tag="image_tag"
                    android:src="@drawable/img_doctor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_lg"
                    android:layout_toRightOf="@id/profile"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16dp"/>

                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        style="?android:attr/ratingBarStyleSmall" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_lg"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_phone_black_24dp"
                    android:scaleType="fitXY"
                    android:onClick="onPhoneDilogClick"
                    tools:ignore="NotSibling" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/relative"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginBottom="10dp"
                android:background="#F7F5F5" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/diamond"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/locationimg1"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/margin_md"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_md"
                        android:layout_below="@+id/view"
                        android:layout_toRightOf="@+id/diamond"
                        android:orientation="vertical"
                        tools:ignore="NotSibling">

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_md"
                            android:text="Location"
                            android:textStyle="bold"
                            style="@style/NormalTextInputLayout"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_md"
                            android:layout_marginTop="@dimen/margin_sm"
                            android:text=""
                            style="@style/NormalTextInputLayout"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/addressimg"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/margin_md"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_md"
                        android:layout_toRightOf="@+id/home"
                        android:orientation="vertical"
                        tools:ignore="NotSibling">

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:layout_marginLeft="@dimen/margin_md"
                            android:textStyle="bold"
                            style="@style/NormalTextInputLayout"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_sm"
                            android:text=""
                            android:layout_marginLeft="@dimen/margin_md"
                            style="@style/NormalTextInputLayout"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgabout"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/aboutimag4"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/margin_md"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_md"
                        android:layout_toRightOf="@+id/imgabout"
                        android:orientation="vertical"
                        tools:ignore="NotSibling">

                        <TextView
                            android:id="@+id/tvabout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/margin_md"
                            style="@style/NormalTextInputLayout"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_sm"
                            android:text=""
                            android:layout_marginLeft="@dimen/margin_md"
                            style="@style/NormalTextInputLayout"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <include
                android:id="@+id/cardview"
                layout="@layout/layout_lab_item"
                android:layout_below="@id/linear2"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginLeft="@dimen/margin_sm"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pic"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#3586FD"
            android:text="Book An Appointment"
            android:textColor="#FFFFFF"
            tools:ignore="NotSibling"
            android:onClick="onBookAppointmentClick"/>

    </RelativeLayout>

</RelativeLayout>
