<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="175dp"
   >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/buildindName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Eunice Porter M.D."
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/town"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/buildindName"
                android:text="Mandalay"
                android:textColor="#565656"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/icon0"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_below="@id/town"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/town"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/icon0"
                android:gravity="center_vertical"
                android:text="4 AM - 10 PM"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/icon1"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_below="@id/icon0"
                android:src="@drawable/ic_dr_location" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/icon0"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/icon1"
                android:gravity="center_vertical"
                android:text="72 x 73 , 32x 33"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_below="@id/icon1"
                android:src="@drawable/ic_dr_phone" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/icon1"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/icon2"
                android:gravity="center_vertical"
                android:text="+959256718019"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_below="@id/icon2"
                android:src="@drawable/ic_dr_email" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/icon2"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/icon3"
                android:gravity="center_vertical"
                android:text="www.hospital.com"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
