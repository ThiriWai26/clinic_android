<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/relativeimg"
                    android:layout_below="@+id/horizontalcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgservice"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:padding="1dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/services2"
                        android:scaleType="centerCrop"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/texttitle"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_toRightOf="@+id/imgservice"
                        android:text="Title"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000"/>

                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/texttitle"
                        android:layout_toRightOf="@id/imgservice"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="0dp"
                        style="?android:attr/ratingBarStyleSmall" />

                    <TextView
                        android:id="@+id/textprice"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_toRightOf="@+id/imgservice"
                        android:layout_below="@+id/rating"
                        android:text="Price"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_toRightOf="@id/imgservice"
                        android:layout_below="@+id/about"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="110dp"
                        android:background="#C7C4C4" />

                    <RelativeLayout
                        android:id="@+id/cardbutton"
                        android:layout_toRightOf="@+id/imgservice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:layout_marginStart="10dp"
                        tools:ignore="RtlCompat">

                        <Button
                            android:id="@+id/btnbook"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="0dp"
                            android:background="#FFFFFF"
                            android:paddingBottom="8dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="5dp"
                            android:paddingTop="10dp"
                            android:text="Book"
                            android:textSize="15dp"
                            android:textColor="#000000" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/line"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_below="@id/view"
                        android:orientation="horizontal"
                        android:src="@drawable/line3"
                        android:layout_toRightOf="@+id/cardbutton" />

                    <RelativeLayout
                        android:id="@+id/cardbutton1"
                        android:layout_toRightOf="@+id/line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view"
                        android:layout_marginStart="0dp"
                        tools:ignore="RtlCompat">

                        <Button
                            android:id="@+id/btnsave"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="0dp"
                            android:background="#FFFFFF"
                            android:paddingBottom="11dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:text="favourite"
                            android:textSize="15dp"
                            android:textColor="#000000" />

                    </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
