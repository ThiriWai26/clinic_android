<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/relativeimg"
                    android:layout_below="@+id/horizontalcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/cardR"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="0dp">

                            <android.support.v7.widget.CardView
                                android:id="@+id/cardimage"
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:background="#fff"
                                app:cardCornerRadius="10dp"
                                android:layout_margin="4dp"
                                card_view:cardUseCompatPadding="true"
                                android:elevation="0dp">

                                    <ImageView
                                        android:id="@+id/imgservice"
                                        android:layout_width="120dp"
                                        android:layout_height="150dp"
                                        android:padding="0dp"
                                        android:layout_margin="0dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_marginStart="0dp"
                                        android:layout_marginLeft="0dp"
                                        android:background="@drawable/ecg1"
                                        android:scaleType="centerCrop"
                                        tools:ignore="NotSibling" />

                            </android.support.v7.widget.CardView>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/texttitle"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@+id/cardR"
                        android:text="Electrocardiogram (ECG)"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/textprice"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_toRightOf="@+id/cardR"
                        android:layout_below="@+id/texttitle"
                        android:text="An electrocardiogram, or ECG, looks at your heartâ€™s rate, rhythm and electrical activity. "
                        android:layout_marginTop="1dp"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#686565"/>

                    <!--<View-->
                        <!--android:id="@+id/view"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:layout_toRightOf="@id/imgservice"-->
                        <!--android:layout_below="@+id/about"-->
                        <!--android:layout_marginBottom="12dp"-->
                        <!--android:layout_marginTop="110dp"-->
                        <!--android:background="#C7C4C4" />-->

                    <RelativeLayout
                        android:id="@+id/cardbutton"
                        android:layout_toRightOf="@+id/cardR"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textprice"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="10dp"
                        tools:ignore="RtlCompat">

                        <ImageView
                            android:id="@+id/imagebook"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/book1"/>

                        <TextView
                            android:id="@+id/btnbook"
                            android:layout_toRightOf="@id/imagebook"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_margin="8dp"
                            android:paddingTop="0dp"
                            android:text="Book"
                            android:textSize="14dp"
                            android:textColor="#000000" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/line"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/textprice"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/cardbutton" />

                    <RelativeLayout
                        android:id="@+id/cardbutton1"
                        android:layout_toRightOf="@+id/line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textprice"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="0dp"
                        tools:ignore="RtlCompat">

                        <ImageView
                            android:id="@+id/imagefav"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/favourite_pink"/>

                        <TextView
                            android:id="@+id/btnsave"
                            android:layout_toRightOf="@id/imagefav"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_margin="8dp"
                            android:paddingTop="0dp"
                            android:text="favourite"
                            android:textSize="14dp"
                            android:textColor="#000000" />

                    </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
