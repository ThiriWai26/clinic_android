<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_margin="@dimen/margin_sm"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_md"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textservicecateg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        style="?android:attr/ratingBarStyleSmall" />


            </RelativeLayout>

            <TextView
                android:id="@+id/textservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative"
                android:layout_margin="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_sm"
                android:gravity="center_vertical"
                android:justificationMode="inter_word"
                android:textSize="14dp"
                android:text="Hospital services is a term that refers to medical and surgical services and the supporting laboratories, equipment and personnel."/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/textservice"
                android:layout_margin="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_md"
                android:scaleType="fitXY"
                android:src="@drawable/serviceimg" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginTop="@dimen/margin_md"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imagebook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/margin_md"
                    android:src="@drawable/ic_class_black_24dp"
                    tools:ignore="RtlCompat,VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/imagefav"
                    android:layout_below="@id/imageView"
                    android:layout_toRightOf="@+id/imagebook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="@dimen/margin_md"
                    android:src="@drawable/ic_favorite_border_white_24dp"
                    tools:ignore="RtlCompat,VectorDrawableCompat" />

            </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/linear"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="#E9E7E7" />




</LinearLayout>


