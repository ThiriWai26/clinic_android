<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/clinicimg"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_md"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_below="@+id/imageView1"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/txName"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_md"
            android:gravity="center_vertical"
            style="@style/TitleInputLayout"
            android:text="Name"
            tools:ignore="NotSibling,RtlCompat" />

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_md"
            android:gravity="center_horizontal"
            tools:ignore="NotSibling,RtlCompat" />

        <TextView
            android:id="@+id/txLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txName"
            android:layout_marginLeft="@dimen/margin_md"
            android:layout_marginTop="@dimen/margin_sm"
            android:layout_weight="1"
            android:text="Location"
            android:gravity="center_vertical"
            style="@style/NormalTextInputLayout"
            tools:ignore="NotSibling,RtlCompat" />

    </RelativeLayout>

    <!--    <View-->
    <!--        android:id="@+id/view1"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:layout_below="@+id/relative"-->
    <!--        android:layout_marginTop="14sp"-->
    <!--        android:layout_marginBottom="14dp"-->
    <!--        android:background="#F7F5F5" />-->

</RelativeLayout>


